{
    "semi": true,
    "overrides": [
        {
            "files": [
                "*.html*"
            ],
            "options": {
                "printWidth": 120,
                "tabWidth": 2,
                "singleQuote": false,
                "useTabs": false,
                "parser":"html"
            }
        },
        {
            "files": [
                "*.css"
            ],
            "options": {
                "tabWidth": 2,
                "singleQuote": true,
                "useTabs": false
            }
        },
        {
            "files": [
                "*.js"
            ],
            "options": {
                "tabWidth": 2,
                "singleQuote": true,
                "useTabs": false,
                "parser":"babel"
            }
        }
    ],
    "printWidth": 120
}